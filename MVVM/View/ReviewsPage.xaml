<Page x:Class="Conectar.MVVM.View.ReviewsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Conectar.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReviewsPage">

    <Page.Background>
        <ImageBrush 
                ImageSource="pack://application:,,,/Imagenes/Background.png"
                Stretch="UniformToFill" 
                TileMode="None" />
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Button Grid.Row="0"
                Width="70" 
                Height="20" 
                FontSize="12" 
                Margin="5" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Left" 
                Style="{StaticResource BotonModerno}" 
                Content="VOLVER" 
                Click="BotonVolver"
            />

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <ItemsControl ItemsSource="{Binding MisResenas}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#14181c" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <Grid>
                                    <TextBlock Text="{Binding NombrePelicula}" 
                                               Foreground="White" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{Binding Puntuacion, StringFormat='⭐ {0}/5'}" 
                                               Foreground="White" HorizontalAlignment="Right"/>
                                </Grid>

                                <TextBlock Text="{Binding Contenido}" Foreground="White" 
                                           TextWrapping="Wrap" Margin="0,10" FontSize="14"/>

                                <TextBlock Text="{Binding FechaPublicacion, StringFormat='Publicado el: {0:dd/MM/yyyy HH:mm}'}" 
                                           Foreground="#9ab" FontSize="12" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
