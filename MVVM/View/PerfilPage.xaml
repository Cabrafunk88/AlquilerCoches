<Page x:Class="Conectar.MVVM.View.PerfilPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Conectar.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PerfilPage">

    <Page.Background>
        <ImageBrush 
                ImageSource="pack://application:,,,/Imagenes/Background.png"
                Stretch="UniformToFill" 
                TileMode="None" />
    </Page.Background>

    <Grid>
        <Border Background="Black" 
                CornerRadius="20"
                MaxWidth="1200" 
                MaxHeight="800"
                Padding="40"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <Ellipse Width="140" Height="140" Stroke="White" StrokeThickness="2">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding FotoPerfilURL}" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="{Binding NombreUsuario}" 
                               FontSize="22" FontWeight="Bold" Foreground="White" 
                               Margin="0,15,0,0" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="30,0,0,0">
                    <TextBlock Text="PERFIL DE USUARIO" Foreground="White" 
                               FontWeight="Bold" Margin="0,0,0,20"/>

                    <TextBlock Text="Biografía" Foreground="#9ab" FontSize="12"/>
                    <TextBlock Text="{Binding Bio, TargetNullValue='Sin biografía.'}" 
                               Foreground="White" FontSize="16" TextWrapping="Wrap" Margin="0,5,0,20"/>

                    <UniformGrid Columns="2">
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Email" Foreground="#9ab" FontSize="12"/>
                            <TextBlock Text="{Binding Email}" Foreground="White" FontSize="14"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="ID" Foreground="#9ab" FontSize="12"/>
                            <TextBlock Text="{Binding UsuarioID}" Foreground="White" FontSize="14"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Registrado el" Foreground="#9ab" FontSize="12"/>
                            <TextBlock Text="{Binding FechaRegistro, StringFormat=\{0:dd/MM/yyyy\}}" 
                                       Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </UniformGrid>

                    <Button Content="EDITAR PERFIL" Style="{StaticResource BotonModerno}" 
                            HorizontalAlignment="Left" Width="140" Margin="0,30,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
