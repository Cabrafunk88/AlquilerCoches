<Page x:Class="Conectar.MVVM.View.PerfilPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Conectar.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PerfilPage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Page.Resources>

    <Page.Background>
        <ImageBrush 
                ImageSource="pack://application:,,,/Imagenes/Background.png"
                Stretch="UniformToFill" 
                TileMode="None" />
    </Page.Background>

    <Grid>
        <Button VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Style="{StaticResource BotonModerno}" Content="VOLVER"
                Margin="5"
                FontSize="12"
                Width="70"
                Height="20" Click="BotonVolver"
            />

        <Border Background="Black" 
                CornerRadius="20"
                MaxWidth="1200" 
                MaxHeight="800"
                Padding="40"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <Ellipse Width="140" Height="140" Stroke="White" StrokeThickness="2">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding FotoPerfil}" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="{Binding Username}" 
                               FontSize="22" FontWeight="Bold" Foreground="White" 
                               Margin="0,15,0,0" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="30,0,0,0">
                    <TextBlock Text="PERFIL DE USUARIO" Foreground="White" 
                               FontWeight="Bold" Margin="0,0,0,20"/>

                    <TextBlock Text="Biografía" Foreground="#9ab" FontSize="12"/>
                    <Grid Margin="0,5,0,20">
                        <TextBlock Text="{Binding Bio, TargetNullValue='Sin biografía.'}" 
                               Foreground="White" FontSize="16" TextWrapping="Wrap" Margin="0,5,0,20">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding EstaEditando}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                 </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <TextBox Text="{Binding Bio, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Visibility="{Binding EstaEditando, Converter={StaticResource BoolToVis}}"
                                 Foreground="White" 
                                 Background="#222"
                                 BorderBrush="White"
                                 FontSize="16" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 MinHeight="60"
                            />
                    </Grid>

                    <UniformGrid Columns="2">
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Email" Foreground="#9ab" FontSize="12"/>
                            <Grid>
                                <TextBlock Text="{Binding Email}" Foreground="White" FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding EstaEditando}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                         Visibility="{Binding EstaEditando, Converter={StaticResource BoolToVis}}"
                                         Background="#222" Foreground="White"/>
                            </Grid>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="ID" Foreground="#9ab" FontSize="12"/>
                            <TextBlock Text="{Binding IdUsuario}" Foreground="White" FontSize="14"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Registrado el" Foreground="#9ab" FontSize="12"/>
                            <TextBlock Text="{Binding FechaRegistro, StringFormat=\{0:dd/MM/yyyy\}}" 
                                       Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </UniformGrid>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,30,0,0">
                        <Button Content="EDITAR PERFIL"
                                Command="{Binding EditarPerfilCommand}"
                                Width="140">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource BotonModerno}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding EstaEditando}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <StackPanel Orientation="Horizontal"
                                    Margin="10,0,0,0"
                                    Visibility="{Binding EstaEditando, Converter={StaticResource BoolToVis}}">
                            <Button Content="ACEPTAR"
                                    Command="{Binding AceptarCambiosCommand}"
                                    Style="{StaticResource BotonModerno}"
                                    Width="100" Margin="0,0,10,0"/>

                            <Button Content="CANCELAR"
                                    Command="{Binding CancelarEdicionCommand}"
                                    Style="{StaticResource BotonModerno}"
                                    Width="100" Margin="0,0,10,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
