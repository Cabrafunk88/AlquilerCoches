<Page x:Class="Conectar.MVVM.View.AjustesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Conectar.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AjustesPage">

    <Page.Background>
        <ImageBrush 
                ImageSource="pack://application:,,,/Imagenes/Background.png"
                Stretch="UniformToFill" 
                TileMode="None" />
    </Page.Background>

    <Grid>
        <Button VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Style="{StaticResource BotonModerno}" Content="VOLVER"
                Margin="5"
                FontSize="12"
                Width="70"
                Height="20" Click="BotonVolver"
            />

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <Label Content="AJUSTES DE SONIDO" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,30"
                   Foreground="White"/>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="Volumen de la música de fondo" 
                           HorizontalAlignment="Center" 
                           Foreground="White"
                           Margin="0,0,0,10"
                           FontSize="14"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Slider x:Name="SldVolumen" 
                            Width="250" 
                            Minimum="0" 
                            Maximum="1" 
                            Value="0.5"
                            ValueChanged="SldVolumen_ValueChanged" 
                            TickFrequency="0.01"
                            IsSnapToTickEnabled="False"
                            VerticalAlignment="Center"/>

                    <TextBlock x:Name="TxtPorcentaje" 
                               Text="{Binding ElementName=SldVolumen, Path=Value, StringFormat={}{0:P0}}" 
                               Width="45" 
                               Margin="10,0,0,0" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <Button x:Name="BtnMute" 
                        Content="Silenciar Música" 
                        Style="{StaticResource BotonModerno}"
                        Width="160" 
                        Height="35" 
                        Margin="0,25,0,0"
                        Cursor="Hand"
                        Click="BtnMute_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</Page>