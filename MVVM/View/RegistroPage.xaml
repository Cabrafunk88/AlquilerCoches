<Page x:Class="Conectar.MVVM.View.RegistroPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Conectar.MVVM.View"
      xmlns:vm="clr-namespace:Conectar.MVVM.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="400"
      Title="RegistroPage">

    <Page.DataContext>
        <vm:RegistroViewModel/>
    </Page.DataContext>
    
    <Page.Background>
        <ImageBrush 
                ImageSource="pack://application:,,,/Imagenes/Background.png"
                Stretch="UniformToFill" 
                TileMode="None" />
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.20*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Image Grid.Row="0"
               Source="pack://application:,,,/Imagenes/LogoProyecto.png"
               Width="150" 
               Height="50" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Center"
            />
        </StackPanel>

        <StackPanel Grid.Row ="1">
            <TextBlock Text="Registro de usuario:"
                FontSize="24"
                FontWeight="Bold"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,0,0,10"/>
            <TextBlock Text="Nombre de Ususario: "
                FontSize="16"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
            />
            <TextBox
                 Text="{Binding NombreUsuario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource InputModerno}"
                 Height="30"
                 Width="200"
             />
            <TextBlock Text="Email:"
                FontSize="16"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
            />
            <TextBox
                 Text="{Binding CorreoElectronico, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource InputModerno}"
                 Height="30"
                 Width="200"
             />
            <TextBlock Text="Contraseña:"
                FontSize="16"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
            />
            <TextBox
                 Text="{Binding Contrasena, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource InputModerno}"
                 FontFamily="Password"
                 Width="200"
                 Height="30"
                 >
            </TextBox>
            <TextBlock Text="Descripcion (opcional):"
                FontSize="16"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
            />
            <TextBox
                 Text="{Binding Descripcion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource InputModerno}"
                 FontFamily="Password"
                 Width="200"
                 Height="80"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalContentAlignment="Top"
                 VerticalScrollBarVisibility="Hidden"             
                 >
            </TextBox>
            <TextBlock Text="{Binding Mensaje}"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
            <Button
                Content="Registrar"
                Command="{Binding RegistrarCommand}"
                Style="{StaticResource BotonModerno}"
                Width="150"
                Height="30"
                Margin="0,0,10,0"
                />
        </StackPanel>
    </Grid>
</Page>
