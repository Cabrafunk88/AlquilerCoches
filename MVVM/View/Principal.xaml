<Page x:Class="Conectar.MVVM.View.Principal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Conectar.MVVM.View"
      xmlns:vm="clr-namespace:Conectar.MVVM.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Principal">

    

    <Page.Background>
        <ImageBrush ImageSource="pack://application:,,,/Imagenes/Background.png"
                    Stretch="UniformToFill" />
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Black">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <Image Source="pack://application:,,,/Imagenes/LogoProyecto.png"
                       Width="120" Height="40" Margin="10,0"/>

                <TextBox x:Name="BarraBusqueda" Width="200" Height="24"
                         VerticalContentAlignment="Center" Padding="10,0" Margin="20,0"
                         Tag="Buscar..." Style="{StaticResource BarraBusqueda}"/>

                <Button Content="{Binding Username}" Style="{StaticResource BotonSoloTexto}" 
                        Margin="10,0" Click="BotonUsuario" MinWidth="80">
                    <Button.ContextMenu>
                        <ContextMenu x:Name="UserMenu">
                            <MenuItem Header="Perfil" Click="IrAPerfil"/>
                            <MenuItem Header="Reviews" Click="IrAReviews"/>
                            <MenuItem Header="Cerrar Sesion" Click="CerrarSesion"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>

                <Button Content="PELÍCULAS" Style="{StaticResource BotonSoloTexto}" Margin="10,0"/>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,20">

                <TextBlock Text="PELÍCULAS RECOMENDADAS" 
                           Foreground="#99aabb" FontSize="14" FontWeight="Bold" 
                           Margin="10,0,0,10"/>

                <Separator Background="#445566" Margin="10,0,10,25" Opacity="0.4"/>

                <ItemsControl x:Name="ListaPeliculasAleatorias" ItemsSource="{Binding Peliculas}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Margin="10,15" Cursor="Hand" Click="Pelicula_Click" Tag="{Binding PeliculaID}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="BordePoster" CornerRadius="4" 
                                                BorderThickness="2" BorderBrush="#334455" 
                                                ClipToBounds="True">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                                            </Border.Effect>
                                            <Grid Background="#1a1a1a">
                                                <Image Source="{Binding PortadaURL}" 
                                                       Width="145" Height="215" 
                                                       Stretch="UniformToFill"
                                                       RenderOptions.BitmapScalingMode="HighQuality">
                                                    <Image.ToolTip>
                                                        <ToolTip Content="{Binding Titulo}"/>
                                                    </Image.ToolTip>
                                                </Image>
                                                <Border x:Name="HoverOverlay" Background="White" Opacity="0"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="BordePoster" Property="BorderBrush" Value="#00e054"/>
                                                <Setter TargetName="HoverOverlay" Property="Opacity" Value="0.1"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Frame x:Name="InteriorFrame" NavigationUIVisibility="Hidden" Margin="0,30,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>