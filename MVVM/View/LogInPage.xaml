<Page x:Class="Conectar.MVVM.View.LogInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Conectar.MVVM.View"
      xmlns:logInVM="clr-namespace:Conectar.MVVM.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogInPage"
      >
       

    <Page.DataContext>
        <logInVM:LoginViewModel/>
    </Page.DataContext>

    <Page.Background>
        <ImageBrush 
                ImageSource="pack://application:,,,/Imagenes/Background.png"
                Stretch="UniformToFill" 
                TileMode="None" />
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Image Grid.Row="0"
               Source="pack://application:,,,/Imagenes/LogoProyecto.png"
               Width="300" 
               Height="100" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"
            />
            <Button Width="20"
                Height="20"
                Grid.Row="0"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Margin="0,20,20,0"
                Padding="8,4"
                Cursor="Hand"
                Style="{StaticResource BotonBypass}" Click="Boton_Bypass"
                />
            <Button Width="20"
                Height="20"
                Grid.Row="0"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Margin="0,-17,80,0"
                Padding="8,4"
                Cursor="Hand"
                Style="{StaticResource BotonBypass}" Click="Boton_Ajustes"
                />  
        </StackPanel>

        <StackPanel Grid.Row ="1">
            <TextBlock Text="{Binding Mensaje}"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <TextBlock Text="Ususario: "
                       FontSize="16"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <TextBox
                Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource InputModerno}"
                Height="30"
                Width="200"
            />
            <TextBlock Text="Contraseña:"
                       FontSize="16"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <TextBox
                Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource InputModerno}"
                FontFamily="Password"
                Width="200"
                Height="30"
                >
            </TextBox>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
            <Button
                Content="Iniciar Sesion"
                Command="{Binding LogInCommand}"
                Style="{StaticResource BotonModerno}"
                Width="150"
                Height="30"
                Margin="0,0,10,0"
                />
            <Button
                Content="Registrarse"
                Style="{StaticResource BotonModerno}"
                Width="150"
                Height="30"
                Margin="10,0,0,0" Click="Boton_Registro"
                />
        </StackPanel>
    </Grid>
</Page>
